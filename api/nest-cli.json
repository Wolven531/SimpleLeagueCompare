{
  "compilerOptions": {
    "assets": [
      {
        "include": "data/*",
        "watchAssets": true
      }
    ],
    "plugins": [
      {
        "name": "@nestjs/swagger/plugin",
        "options": {
          "classValidatorShim": true,
          "dtoFileNameSuffix": [".dto.ts", ".entity.ts"]
        }
      }
    ]
  },
  "collection": "@nestjs/schematics",
  "sourceRoot": "src"
}
