{
  "author": "Anthony Williams",
  "description": "The API for SimpleLeagueCompare",
  "license": "MIT",
  "name": "api",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Wolven531/SimpleLeagueCompare.git"
  },
  "version": "0.1.0",
  "scripts": {
    "build": "nest build",
    "copy:users:linux": "rm -rf src/data/users.json; cp dist/data/users.json src/data",
    "copy:users:windows": "DEL /F /S /Q src\\data\\users.json && COPY dist\\data\\users.json src\\data",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prebuild": "rimraf dist",
    "start": "nest start",
    "start:debug": "nest start --debug --watch",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest ^.*\\.e2e-spec\\.ts$",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@nestjs/common": "^7.5.4",
    "@nestjs/config": "^0.6.0",
    "@nestjs/core": "^7.5.4",
    "@nestjs/platform-express": "^9.2.1",
    "@nestjs/swagger": "^4.7.5",
    "axios": "^0.21.2",
    "class-transformer": "^0.3.1",
    "compression": "^1.7.4",
    "moment": "^2.29.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "swagger-ui-express": "^4.1.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.3",
    "@nestjs/schematics": "^7.2.2",
    "@nestjs/testing": "^7.5.4",
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.9",
    "@types/hapi__joi": "^17.1.6",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.9",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "prettier": "^2.1.2",
    "supertest": "^4.0.2",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.11",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/services/*.ts",
      "<rootDir>/src/**/*controller.ts"
    ],
    "coveragePathIgnorePatterns": [
      "^.+app\\.module\\.ts$",
      "^.+main\\.ts$"
    ],
    "coverageReporters": [
      "clover",
      "json",
      "lcov",
      "text",
      "text-summary"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "rootDir": ".",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "^@models/(.*)$": [
        "<rootDir>/src/models/$1"
      ],
      "^@models": [
        "<rootDir>/src/models"
      ]
    },
    "testEnvironment": "node",
    "testRegex": "^.+[\\.-]spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    }
  }
}
