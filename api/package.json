{
  "author": "Anthony Williams",
  "description": "The API for SimpleLeagueCompare",
  "license": "MIT",
  "name": "api",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Wolven531/SimpleLeagueCompare.git"
  },
  "version": "0.0.1",
  "scripts": {
    "build": "nest build",
    "copy:users:windows": "DEL /F /S /Q src\\data\\users.json && COPY dist\\data\\users.json src\\data",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prebuild": "rimraf dist",
    "start": "nest start",
    "start:debug": "nest start --debug --watch",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest ^.*\\.e2e-spec\\.ts$",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@nestjs/common": "^7.4.2",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.4.2",
    "@nestjs/platform-express": "^7.4.2",
    "@nestjs/swagger": "^4.6.0",
    "axios": "^0.20.0",
    "class-transformer": "^0.3.1",
    "compression": "^1.7.4",
    "moment": "^2.27.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.2",
    "swagger-ui-express": "^4.1.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.4.1",
    "@nestjs/schematics": "^7.0.1",
    "@nestjs/testing": "^7.4.2",
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.7",
    "@types/hapi__joi": "^17.1.4",
    "@types/jest": "^26.0.10",
    "@types/node": "^14.6.0",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "jest": "^26.4.1",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "^26.2.0",
    "ts-loader": "^8.0.2",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/models/*.ts",
      "<rootDir>/src/services/*.ts",
      "<rootDir>/src/mastery/*controller.ts"
    ],
    "coverageDirectory": "../coverage",
    "coveragePathIgnorePatterns": [
      "^.+app\\.module\\.ts$",
      "^.+main\\.ts$"
    ],
    "coverageReporters": [
      "clover",
      "json",
      "lcov",
      "text",
      "text-summary"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "rootDir": ".",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "^@models/(.*)$": [
        "<rootDir>/src/models/$1"
      ],
      "^@models": [
        "<rootDir>/src/models"
      ]
    },
    "testEnvironment": "node",
    "testRegex": "^.+[\\.-]spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    }
  }
}
