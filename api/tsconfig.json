{
	"compilerOptions": {
		"allowJs": false,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"declaration": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"lib": [
			// "esnext"
		],
		"moduleResolution": "node",
		"module": "CommonJS",
		// "module": "ESNext",
		// "noEmit": true, // conflicts w/ incremental
		"outDir": "./dist",
		"paths": {
			"@data/*": ["src/data/*"],
			"@models/*": ["src/models/*"]
		},
		"removeComments": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2017"
	},
	"exclude": [
		"dist",
		"node_modules"
	]
}
