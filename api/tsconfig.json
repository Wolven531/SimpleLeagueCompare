{
	"compilerOptions": {
		"baseUrl": "./",
		"declaration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"incremental": true,
		"module": "commonjs",
		"outDir": "./dist",
		"removeComments": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"target": "es2017"
	},
	"exclude": [
		"node_modules",
		"dist"
	]
}
