{
	"name": "simpleleaguecompare",
	"version": "0.4.0",
	"private": true,
	"dependencies": {
		"@material-ui/core": "^4.11.0",
		"axios": "^0.21.0",
		"axios-cookiejar-support": "^1.0.1",
		"moment": "^2.29.1",
		"object-path": "^0.11.5",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-json-view": "^1.19.1",
		"react-router-dom": "^5.2.0",
		"tough-cookie": "^4.0.0",
		"typescript": "^3.8.3"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^5.11.4",
		"@testing-library/react": "^11.0.4",
		"@testing-library/user-event": "^12.1.7",
		"@types/enzyme": "^3.10.8",
		"@types/enzyme-adapter-react-16": "^1.0.6",
		"@types/jest": "^26.0.14",
		"@types/node": "^14.11.8",
		"@types/react": "^16.9.52",
		"@types/react-dom": "^16.9.8",
		"@types/react-router-dom": "^5.1.6",
		"@types/tough-cookie": "^4.0.0",
		"enzyme": "^3.11.0",
		"enzyme-adapter-react-16": "^1.15.5",
		"husky": "^4.3.0",
		"react-scripts": "3.4.3",
		"ts-jest": "^26.4.1"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run test:cc"
		}
	},
	"jest": {
		"collectCoverageFrom": [
			"**/*.{js,jsx}",
			"**/*.{ts,tsx}",
			"!**/node_modules/**",
			"!**/vendor/**"
		],
		"coveragePathIgnorePatterns": [
			"^.+\\index\\.tsx$",
			"^.+\\react-app-env\\.d\\.ts$",
			"^.+\\serviceWorker\\.ts$",
			"^.+[A-z-]+\\.model.ts$"
		],
		"coverageReporters": [
			"clover",
			"json",
			"lcov",
			"text",
			"text-summary"
		],
		"coverageThreshold": {
			"global": {
				"branches": 0,
				"functions": 0,
				"lines": 0,
				"statements": 0
			}
		},
		"moduleNameMapper": {
			"^@models/(.*)$": [
				"<rootDir>/src/models/$1"
			],
			"^@models": [
				"<rootDir>/src/models"
			]
		},
		"transform": {
			"^.+\\.(j|t)sx?$": "ts-jest"
		}
	},
	"scripts": {
		"build": "react-scripts build",
		"eject": "react-scripts eject",
		"start": "react-scripts start",
		"test": "react-scripts test",
		"test:cc": "react-scripts test --coverage --watchAll=false"
	}
}
