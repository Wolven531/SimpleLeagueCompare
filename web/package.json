{
	"name": "simpleleaguecompare",
	"version": "0.3.0",
	"private": true,
	"dependencies": {
		"@material-ui/core": "^4.11.0",
		"axios": "^0.20.0",
		"moment": "^2.29.0",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-router-dom": "^5.2.0",
		"typescript": "^3.8.3"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^5.11.4",
		"@testing-library/react": "^11.0.4",
		"@testing-library/user-event": "^12.1.7",
		"@types/jest": "^26.0.14",
		"@types/node": "^14.11.2",
		"@types/react": "^16.9.50",
		"@types/react-dom": "^16.9.8",
		"@types/react-router-dom": "^5.1.5",
		"husky": "^4.3.0",
		"react-scripts": "3.4.3",
		"ts-jest": "^26.4.1"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run test:cc"
		}
	},
	"jest": {
		"coveragePathIgnorePatterns": [
			"^.+\\index\\.tsx$",
			"^.+\\serviceWorker\\.ts$",
			"^.+[A-z-]+\\.model.ts$"
		],
		"coverageReporters": [
			"clover",
			"json",
			"lcov",
			"text",
			"text-summary"
		],
		"coverageThreshold": {
			"global": {
				"branches": 5,
				"functions": 5,
				"lines": 35,
				"statements": 35
			}
		},
		"moduleNameMapper": {
			"^@models/(.*)$": [
				"<rootDir>/src/models/$1"
			],
			"^@models": [
				"<rootDir>/src/models"
			]
		},
		"transform": {
			"^.+\\.(j|t)sx?$": "ts-jest"
		}
	},
	"scripts": {
		"build": "react-scripts build",
		"eject": "react-scripts eject",
		"start": "react-scripts start",
		"test": "react-scripts test",
		"test:cc": "react-scripts test --coverage --watchAll=false"
	}
}
